<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:fab="http://schemas.android.com/apk/res-auto"
                tools:context="cn.com.chaochuang.goldgrid.filepreview.PreviewContent"
                android:orientation="vertical">


    <FrameLayout
            android:id="@+id/book_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/action_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            fab:fab_addButtonSize="mini"
            fab:fab_expandDirection="up"
    >

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/ac_hand_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_hand_press"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/ac_txt_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_message"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/ac_annot_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_txt_show"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
