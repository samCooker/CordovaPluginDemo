<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:example="http://schemas.android.com/apk/res-auto" xmlns:fab="http://schemas.android.com/tools"
                android:id="@+id/hw_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>


    <com.kinggrid.iapppdf.ui.viewer.PDFHandWriteView
        android:id="@+id/v_canvas1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/hand_write_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            fab:fab_addButtonSize="mini"
            fab:fab_expandDirection="up"
    >

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_hand_press"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_hand_press"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_hand_press"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_redo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_hand_press"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_hand_press"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_pen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_hand_press"
                fab:fab_colorNormal="@color/btn_white"
                fab:fab_colorPressed="@color/btn_press_white"
        />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>