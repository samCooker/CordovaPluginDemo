<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="1dp"
            android:background="@color/tpHeaderBg"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tpTextColor"
                android:background="@null"
                android:text="@string/dp_tv_hour"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tpTextColor"
                android:background="@null"
                android:text="@string/dp_tv_minus"
                android:id="@+id/textView"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
    >
        <com.cookie.datepicker.views.TimeScrollPicker
                android:id="@+id/view_hour"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:spv_center_item_background="#44000000"
                app:spv_disallow_intercept_touch="true"
                app:spv_max_text_size="16dp"
                app:spv_min_text_size="14dp"
                app:spv_visible_item_count="3"/>

        <com.cookie.datepicker.views.TimeScrollPicker
                android:id="@+id/view_minu"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:spv_center_item_background="#44000000"
                app:spv_disallow_intercept_touch="true"
                app:spv_max_text_size="16dp"
                app:spv_min_text_size="14dp"
                app:spv_visible_item_count="3"/>
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="1dp"
            android:background="@color/tpHeaderBg"
    />
</LinearLayout>
