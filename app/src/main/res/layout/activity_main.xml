<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_filepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="@string/file_picker_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="26dp"/>

        <Button
            android:id="@+id/bar_scanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1E88E5"
            android:text="@string/bar_scanner"
            android:layout_alignBaseline="@+id/btn_filepicker"
            android:layout_alignBottom="@+id/btn_filepicker"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp"/>

</RelativeLayout>